{
    "gitbook": "3.x.x",
    "title": "轻松学Java（Head First Java）",
    "description": "深入掌握Java, 不难",
    "language": "zh-hans",
    "catalog": ["docs"],
    "outputfile": "summary-gen.md",
    "structure": {
        "readme": "README.md",
        "summary": "SUMMARY.md"
    },
    "plugins": [
        "highlight-code",
        "fontsettings",
        "include-codeblock@^3.0.2",
        "tbfed-pagefooter@^0.0.1",
        "sectionx@^3.1.0",
        "sitemap",
        "code",
        "-lunr",
        "-search",
        "-sharing",
        "-fontsettings",
        "cuav-chapters",
        "heading-anchors",
        "splitter",
        "theme-door",
        "search-pro-fixed"
    ],
    "variables": {
        "doorTheme": {
            "nav": [
                {
                    "url": "https://rust-lang.xfoss.com",
                    "target": "_blank",
                    "name": "学习 Rust 编程语言 · ⚙️"
                },
                {
                    "url": "https://ccna.xfoss.com",
                    "target": "_blank",
                    "name": "学习 “网络通信” 技术 CCNA · 🖧"
                }
            ]

        }
    },
    "pluginsConfig": {
        "doorTheme": {
            "search-placeholder": "请输入关键字搜索",
            "logo": "./docs/images/openjdk_java.png",
            "favicon": "./docs/images/java-lang.ico"
        },
        "include-codeblock": {
            "template": "ace",
            "unindent": true,
            "edit": true
        },
        "tbfed-pagefooter": {
            "copyright": "Copyleft @ java-lang.xfoss.com 2022",
            "modify_label": "该文件修订时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "sectionx": {
            "tag": "b"
        },
        "sitemap": {
            "hostname": "https://java-lang.xfoss.com/"
        }
    },
    "pdf": {
        "pageNumbers": true,
        "fontFamily": "Arial",
        "fontSize": 12,
        "paperSize": "a4",
        "headerTemplate": "_CHAPTER_ > _SECTION_",
        "margin": {
            "right": 22,
            "left": 26,
            "top": 28,
            "bottom": 22
        }
    }
}
